{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://opencaptablecoalition.com/schema/types/vesting/VestingConditionTrigger.schema.json",
  "title": "Type - Vesting Condition Trigger",
  "description": "Describes triggers to be satisfied for a VestingCondition to be met",
  "type": "object",
  "properties": {
    "type": {
      "description": "...",
      "type": "string",
      "enum": [
        "VESTING_START_DATE",
        "VESTING_SCHEDULE_RELATIVE",
        "VESTING_EVENT"
      ]
    },
    "period": {
      "description": "...",
      "$ref": "https://opencaptablecoalition.com/schema/types/vesting/VestingPeriod.schema.json"
    },
    "relative_to_condition_id": {
      "description": "...",
      "type": "string"
    }
  },
  "oneOf": [
    {
      "properties": {
        "type": {
          "const": "VESTING_START_DATE"
        }
      }
    },
    {
      "properties": {
        "type": {
          "const": "VESTING_SCHEDULE_RELATIVE"
        }
      },
      "required": ["period", "relative_to_condition_id"]
    },
    {
      "properties": {
        "type": {
          "const": "VESTING_EVENT"
        }
      }
    }
  ],
  "required": ["type"],
