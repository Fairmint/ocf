{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://opencaptablecoalition.com/schema/files/stakeholders_file",
  "title": "File - Stakeholders",
  "description": "JSON containing file type identifier and list of stakeholders",
  "allOf": [
    { "$ref": "https://opencaptablecoalition.com/schema/primitives/base_file" }
  ],
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "$ref": "https://opencaptablecoalition.com/schema/objects/stakeholder"
      }
    },
    "file_type": {
      "const": "OCF_STAKEHOLDERS_FILE"
    }
  },
  "required": ["items", "file_type"]
}
