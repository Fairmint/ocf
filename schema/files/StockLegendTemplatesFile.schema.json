{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://opencaptablecoalition.com/schema/files/stock_legend_templates_file",
  "title": "File - Stock Legend Templates",
  "description": "JSON containing file type identifier and list of stock legend templates",
  "type": "object",
  "allOf": [
    { "$ref": "https://opencaptablecoalition.com/schema/primitives/base_file" }
  ],
  "properties": {
    "items": {
      "type": "array",
      "description": "List of OCF stock legend template objects",
      "items": {
        "$ref": "https://opencaptablecoalition.com/schema/objects/stock_legend_template"
      }
    },
    "file_type": {
      "const": "OCF_STOCK_LEGEND_TEMPLATES_FILE"
    }
  },
  "required": ["items", "file_type"]
}
