{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://opencaptablecoalition.com/schema/primitives/transactions/release/base_release",
  "title": "Primitive - Security Release Transaction",
  "description": "Abstract object describing fields common to all release transaction objects",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://opencaptablecoalition.com/schema/primitives/transactions/base_transaction"
    }
  ],
  "properties": {
    "settlement_date": {
      "description": "Date of settlement",
      "$ref": "https://opencaptablecoalition.com/schema/types/date"
    },
    "release_price": {
      "description": "Consideration for the security",
      "$ref": "https://opencaptablecoalition.com/schema/types/monetary"
    },
    "net_quantity": {
      "description": "Net quantity of security units",
      "$ref": "https://opencaptablecoalition.com/schema/types/numeric"
    },
    "method": {
      "description": "Method of release",
      "type": "string"
    },
    "stock_swap": {
      "description": "Whether this is a stock swap or not?",
      "type": "boolean"
    },
    "cash_paid": {
      "description": "Cash paid for the security",
      "$ref": "https://opencaptablecoalition.com/schema/types/monetary"
    },
    "quantity_sold": {
      "description": "Quantity of security units sold",
      "$ref": "https://opencaptablecoalition.com/schema/types/numeric"
    },
    "sale_price_per_unit": {
      "description": "Cash paid for the security",
      "$ref": "https://opencaptablecoalition.com/schema/types/monetary"
    },
    "withheld_quantity": {
      "description": "Quantity of security units withheld",
      "$ref": "https://opencaptablecoalition.com/schema/types/numeric"
    }
  },
  "required": ["settlement_date", "release_price"]
}
