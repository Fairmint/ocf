{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/Valuation.schema.json",
  "title": "Valuation",
  "description": "Object describing a valuation",
  "type": "object",
  "properties": {
    "id": { "description": "Identifier for the valuation", "type": "string" },
    "provider": {
      "description": "Entity which provided the valuation",
      "type": "string"
    },
    "price_per_share": {
      "description": "Valued price per share",
      "$ref": "file:../types/Money.schema.json"
    },
    "valuation_date": {
      "description": "Date of the valuation",
      "$ref": "file:../types/DateTime.schema.json"
    },
    "valuation_type": {
      "description": "Seam for supporting different types of valuations in future versions",
      "$ref": "file:../enums/ValuationType.schema.json"
    },
    "comments": {
      "description": "List of comments for the valuation",
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["id", "price_per_share", "valuation_date", "valuation_type"]
}
