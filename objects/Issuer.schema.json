{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "Objects.Issuer.schema.json",
  "title": "Object - Issuer",
  "description": "Object describing the issuer of the cap table",
  "type": "object",
  "properties": {
    "id": { "description": "Identifier for the issuer", "type": "string" },
    "legal_name": {
      "description": "Legal name of the issuer",
      "type": "string"
    },
    "formation_date": {
      "description": "Date of formation",
      "$ref": "Types.DateTime.schema.json"
    },
    "comments": {
      "title": "Issuer - Comments",
      "description": "Unstructured comments related to and stored for the issuer",
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["id", "legal_name", "formation_date"]
}
