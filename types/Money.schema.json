{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/Money.schema.json",
  "title": "Money",
  "description": "Type representing a monetary value in a specified currency code",
  "type": "object",
  "properties": {
    "amount": {
      "description": "Numeric value",
      "$ref": "file:Numeric.schema.json"
    },
    "currency": { "description": "ISO-4217 currency code", "type": "string" }
  },
  "required": ["amount"]
}
